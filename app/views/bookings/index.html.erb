<div class="min-h-full">
  <nav class="bg-gray-800">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="flex h-16 items-center justify-between">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <img class="h-8 w-8" src="https://tailwindui.com/img/logos/mark.svg?color=indigo&shade=500" alt="Your Company">
          </div>
          <div class="hidden md:block">
            <div class="ml-10 flex items-baseline space-x-4">
              <a href="/notices" class="rounded-md px-3 py-2 text-sm font-medium text-gray-300 hover:bg-gray-700 hover:text-white" aria-current="page">Avisos</a>
              <a href="/bookings" class="rounded-md bg-gray-900 px-3 py-2 text-sm font-medium text-white">Reservas</a>
              <a href="/meetings" class="rounded-md px-3 py-2 text-sm font-medium text-gray-300 hover:bg-gray-700 hover:text-white">Encontros</a>
            </div>
          </div>
        </div>
        <div class="hidden md:block">
          <div class="ml-4 flex items-center md:ml-6">
            <button type="button" class="relative rounded-full bg-gray-800 p-1 text-gray-400 hover:text-white focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-800">
              <span class="absolute -inset-1.5"></span>
              <span class="sr-only">View notifications</span>
              <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" d="M14.857 17.082a23.848 23.848 0 005.454-1.31A8.967 8.967 0 0118 9.75v-.7V9A6 6 0 006 9v.75a8.967 8.967 0 01-2.312 6.022c1.733.64 3.56 1.085 5.455 1.31m5.714 0a24.255 24.255 0 01-5.714 0m5.714 0a3 3 0 11-5.714 0" />
              </svg>
            </button>
          </div>
        </div>
      </div>
    </div>
  </nav>

  <header class="bg-white shadow">
    <div class="mx-auto max-w-7xl px-4 py-6 sm:px-6 lg:px-8">
      <h1 class="text-3xl font-bold tracking-tight text-gray-900">Reservas</h1>
    </div>
  </header>
  <main>
    <div class="flex justify-center mx-auto max-w-7xl px-4 py-6 sm:px-6 lg:px-8">
    <table class="w-2/3">
      <thead>
          <tr class="flex justify-between px-3">
            <th class="text-xl">Lugar</th>
            <th class="text-xl">Solicitante</th>
            <th class="text-xl">Data</th>
            <th class="text-xl">Hora</th>
        </tr>
      </thead>
      <tbody>
        <% @bookings.each do |b| %>
          <tr class="flex justify-between px-3 border-b p-3 hover:bg-zinc-50">
            <td><%= b[:place] %></td>
            <td><%= b[:requester] %></td>
            <td><%= b[:day].strftime("%m/%d") %></td>
            <td><%= b[:begin].strftime("%H:%M") %> at√© <%= b[:end].strftime("%H:%M") %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
     <%= link_to "+", new_booking_path, :class => "flex justify-center border rounded-full p-5 w-16 font-semibold
        fixed bottom-10 right-20 bg-blue-500 hover:bg-blue-400" %>
    </div>
  </main>
</div>
